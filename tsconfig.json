{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "strict": false,
    "noLib": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es2018",
    "lib": [
      "es2018"
    ],
    "typeRoots": [
      "node_modules/class-validator/node_modules/@types",
      "node_modules/@types"
    ],
    "sourceMap": true,
    "allowJs": true,
    "incremental": true
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "refs"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
